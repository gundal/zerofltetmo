#!/system/bin/sh

if [ -f "/system/xbin/busybox" ]; then BB=/system/xbin/busybox; else BB=/sbin/busybox; fi;
if [ -f "/system/bin/busybox" ]; then BB=/system/bin/busybox; else BB=/sbin/busybox; fi;

cat << CTAG
{
    name:SELinux,
    elements:[
	{ SPane:{
		title:"SELinux (Security-Enhanced Linux)"
	}},
	{ SSpacer:{
		height:1
	}},
	{ SLiveLabel:{
                title:"Status",
		description:"",
		refresh:3000,
		action:"display selinux_status"
	}},

	{ SPane:{
		title:"Enable or Disable Selinux",
		description:" Disabling will only last until next reboot"
	}},
	{ SDescription:{
		description:""
	}},
	{ SOptionList:{
		default:`echo $(getenforce)`,
		action:"devtools selinux",
		values:[Boot, Enforcing, Permissive]
	}},
	{ SSpacer:{
		height:1
	}},
    ]
}
CTAG
